<% if book.errors.any? %>

       <div class="alert alert-warning">
  				<%= pluralize(book.errors.count, 'error') %>
    			<ul>
      			<% book.errors.full_messages.each do |message| %>
        		<li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

<%= form_for(book) do |f| %>
<div class="field row">

		<%= f.label :title %><br>
		<%= f.text_field :title, class: "col-lg-12" %><br>
  </div>
  <div class="field row">
    <%= f.label :Opinion %><br>
		<%= f.text_area :body, class: "col-lg-12" %><br>
</div>
<div class="actions row">


  <%= f.submit class: "btn btn-primary col-lg-12"%>
</div>
<% end %>